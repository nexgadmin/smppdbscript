CREATE TABLE `NEXG_CDRS_STITCHING` (
  `EVENT_DATE` date DEFAULT NULL,
  `SUBMIT_DATETIME` datetime DEFAULT NULL,
  `DELIVERY_DATETIME` datetime DEFAULT NULL,
  `SENDER_ID` varchar(20) DEFAULT NULL,
  `B_NUMBER` varchar(15) DEFAULT NULL,
  `MESSAGE_LENGTH` varchar(10) CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci DEFAULT NULL,
  `MESSAGE_ID` varchar(100) CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci DEFAULT '0',
  `TRANSACTION_ID` varchar(70) CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci NOT NULL,
  `SMSC_NAME` varchar(20) DEFAULT NULL,
  `CHILD_USER_NAME` varchar(20) DEFAULT NULL,
  `SMSC_USER_NAME` varchar(20) CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci DEFAULT '0',
  `SMSC_ERROR_CODE` varchar(5) DEFAULT NULL,
  `DESCRIPTION` varchar(50) CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci DEFAULT 'PENDING',
  `ERROR_CODE_DESCRIPTION` varchar(150) CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci DEFAULT NULL,
  `ENCODING` varchar(2) DEFAULT NULL,
  `VALIDITY` varchar(5) CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci DEFAULT '0',
  `DLT_PE_ID` varchar(25) DEFAULT NULL,
  `DLT_CT_ID` varchar(25) DEFAULT NULL,
  `PARTS` int DEFAULT '1',
  `LRN` varchar(5) CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci DEFAULT '0',
  `OPERATOR` varchar(50) DEFAULT NULL,
  `CIRCLE_NAME` varchar(50) CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci DEFAULT NULL,
  `SMSC` varchar(20) CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci DEFAULT NULL,
  `SMS_CONTENT` text CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci,
  `FILE_NAME` varchar(30) DEFAULT NULL,
  `CDR_LOAD_DATE` timestamp NULL DEFAULT CURRENT_TIMESTAMP,
  PRIMARY KEY (`TRANSACTION_ID`),
  KEY `B_NUMBER` (`B_NUMBER`,`DESCRIPTION`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4 COLLATE=utf8mb4_0900_ai_ci

 CREATE TABLE `NEXG_DLR` (
  `DELIVERY_DATETIME` datetime DEFAULT NULL,
  `MESSAGE_ID` varchar(100) CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci DEFAULT NULL,
  `DESCRIPTION` varchar(100) CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci DEFAULT NULL,
  `SMSC_ERROR_CODE` varchar(5) DEFAULT NULL,
  `SMSC_USER_NAME` varchar(20) DEFAULT NULL,
  `TRANSACTION_ID` varchar(100) CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci NOT NULL,
  `CDR_LOAD_DATE` timestamp NULL DEFAULT CURRENT_TIMESTAMP,
  PRIMARY KEY (`TRANSACTION_ID`),
  KEY `CDR_LOAD_DATE` (`CDR_LOAD_DATE`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4 COLLATE=utf8mb4_0900_ai_ci

CREATE TABLE `SMPP_DLR_ERR_MAPPING` (
  `ID` int NOT NULL AUTO_INCREMENT,
  `SMSC` varchar(20) CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci DEFAULT NULL,
  `ACTUAL_DLR_ERR` varchar(5) CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci DEFAULT NULL,
  `ERROR_CODE_DESCRIPTION` varchar(150) CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci DEFAULT NULL,
  `INSERT_DATE` timestamp NULL DEFAULT CURRENT_TIMESTAMP,
  PRIMARY KEY (`ID`),
  UNIQUE KEY `SMSC` (`SMSC`,`ACTUAL_DLR_ERR`)
) ENGINE=InnoDB AUTO_INCREMENT=3239 DEFAULT CHARSET=utf8mb4 COLLATE=utf8mb4_0900_ai_ci

 CREATE TABLE `SMSC_ID_MST_TEMP` (
  `SMSC_ID` varchar(50) CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci DEFAULT NULL,
  `USER_NAME` varchar(50) CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci DEFAULT NULL,
  `SMSC_NAME` varchar(50) DEFAULT NULL,
  `PLATFORM` varchar(10) CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci DEFAULT NULL,
  `INSERT_DATE` timestamp NOT NULL DEFAULT CURRENT_TIMESTAMP,
  `CREATED_BY` varchar(50) DEFAULT NULL,
  UNIQUE KEY `SMSC_ID_MST_INDEX` (`SMSC_ID`,`PLATFORM`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4 COLLATE=utf8mb4_0900_ai_ci

